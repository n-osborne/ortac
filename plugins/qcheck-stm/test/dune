(include dune.inc)

(cram
 (package ortac-qcheck-stm)
 (deps
  (package ortac-core)
  (package ortac-qcheck-stm)))

(rule
 (target all_warnings_errors)
 (package ortac-qcheck-stm)
 (deps
  (package ortac-core)
  (package ortac-qcheck-stm))
 (action
  (setenv
   ORTAC_PLUGINS
   qcheck-stm
   (ignore-stdout
    (with-stderr-to
     %{target}
     (run ortac qcheck-stm %{dep:all_warnings.mli} "make 16 'a'" "char t"))))))

(rule
 (alias runtest)
 (package ortac-qcheck-stm)
 (action
  (diff all_warnings_errors.expected all_warnings_errors)))

(executable
 (name dune_gen)
 (modules dune_gen))

(rule
 (targets dune.inc.gen)
 (action
  (with-stdout-to
   %{targets}
   (run ./dune_gen.exe %{read-lines:dune_gen.args}))))

(rule
 (alias runtest)
 (action
  (diff dune.inc dune.inc.gen)))
